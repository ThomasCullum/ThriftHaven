
    <div class="bid_card">
    <h1>My Bids</h1>
    <% if @items.any? %>
        <ul class="list-group">
            <% @items.each do |item| %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= item.name %>
                    <span class="badge">
                        <% item.bids.each do |bid| %>
                            <div class="bid-actions">
                                <span><%= bid.user.first_name %></span>
                                <%= link_to "Accept", accept_bid_item_path(item, bid_id: bid.id), method: :patch, class: "button-50 accept" %>
                                <%= link_to "Decline", decline_bid_item_path(item, bid_id: bid.id), method: :patch, class: "button-50 decline" %>
                            </div>
                        <% end %>
                    </span>
                </li>
            <% end %>
        </ul>
    <% else %>
        <p>No items with bids found.</p>
    <% end %>
</div>

