<main class="container my-2 py-2"></main>
<div class="container">
  <h1><%= action_name.capitalize %> Item</h1>
  <%= simple_form_for (@item) do |form| %>
    <div>
      <%= form.input :name %>
    </div>
    <div>
      <%= form.input :description %>
    </div>
    <div>
      <%= form.input :category %>
    </div>
    <div>
      <%= form.input :rating %>
    </div>
    <div>
      <%= form.select :sale_type, Item.sale_types.keys.map { |w| [w.humanize, w] } %>
    </div>
    <div>
      <%= form.input :price %>
    </div>
    <div>
      <%= form.input :photo, as: :file %>
    </div>
    <div>
      <%= form.submit %>
    </div>
  <% end %>

  <%= link_to 'Back', items_path %>
</div>
